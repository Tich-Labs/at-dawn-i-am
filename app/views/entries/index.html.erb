<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="text-center mb-12">
    <h1 class="text-4xl md:text-5xl font-light text-stone-900 mb-6">
      All Entries
    </h1>
    <p class="text-lg text-stone-600 max-w-2xl mx-auto leading-relaxed">
      A complete collection of diary entries, newest to oldest.
    </p>
  </div>
  <% if @entries.any? %>
    <div class="space-y-16">
      <% @entries.each do |entry| %>
        <article class="border-b border-stone-200 pb-12 last:border-b-0 last:pb-0">
          <div class="space-y-6">
            <time datetime="<%= entry.date.iso8601 %>" class="block text-sm text-stone-500 uppercase tracking-wide">
              <%= entry.date.strftime("%B %d, %Y") %>
            </time>
            <% if entry.image.attached? %>
              <div class="overflow-hidden rounded-lg">
                <%= link_to entry_path(entry), class: "group block" do %>
                  <%= image_tag entry.image.variant(resize_to_limit: [800, 400]), 
                      class: "w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300",
                      alt: "" %>
                <% end %>
              </div>
            <% end %>
            <div class="prose-stone max-w-none">
              <div class="text-stone-700 leading-relaxed">
                <%= truncate(strip_tags(entry.body), length: 300, separator: ' ') %>
              </div>
            </div>
            <div class="text-center">
              <%= link_to "read full entry →", entry_path(entry), 
                  class: "inline-block text-sm text-stone-500 hover:text-stone-700 transition-colors font-medium hover:underline" %>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <p class="text-stone-500 text-lg">No published entries yet.</p>
      <p class="mt-4 text-stone-400">
        Check back soon for new diary entries.
      </p>
    </div>
  <% end %>
  <div class="mt-16 text-center">
    <%= link_to "← back to home", root_path, 
        class: "inline-block px-6 py-2 border border-stone-300 text-stone-700 hover:bg-stone-100 transition-colors" %>
  </div>
</div>
