<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <article class="prose-stone max-w-none">
    <header class="mb-12 text-center">
      <time datetime="<%= @entry.date.iso8601 %>" class="block text-sm text-stone-500 uppercase tracking-wide mb-4">
        <%= @entry.date.strftime("%B %d, %Y") %>
      </time>
      <h1 class="text-4xl md:text-5xl font-light text-stone-900">
        Entry from <%= @entry.date.strftime("%B %d, %Y") %>
      </h1>
    </header>
    <% if @entry.image.attached? %>
      <div class="mb-12">
        <%= image_tag @entry.image.variant(resize_to_limit: [1200, 600]), 
            class: "w-full rounded-lg shadow-lg",
            alt: "Image for diary entry from #{@entry.date.strftime('%B %d, %Y')}" %>
      </div>
    <% end %>
    <div class="prose prose-lg max-w-none text-stone-700 leading-relaxed">
      <%= sanitize(@entry.body, tags: %w[p strong em a h1 h2 h3 p br blockquote ul ol li]) %>
    </div>
  </article>
  <footer class="mt-16 pt-8 border-t border-stone-200">
    <div class="flex justify-between items-center">
      <div class="text-sm text-stone-500">
        Published <%= @entry.created_at.strftime("%B %d, %Y") %>
      </div>
      <div class="space-x-4">
        <%= link_to "â† all entries", entries_path, 
            class: "inline-block px-4 py-2 border border-stone-300 text-stone-700 hover:bg-stone-100 transition-colors text-sm" %>
        <%= link_to "home", root_path, 
            class: "inline-block px-4 py-2 border border-stone-300 text-stone-700 hover:bg-stone-100 transition-colors text-sm" %>
      </div>
    </div>
  </footer>
</div>
