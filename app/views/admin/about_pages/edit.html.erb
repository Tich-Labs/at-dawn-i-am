<div class="max-w-3xl mx-auto px-6 py-16">
  <header class="mb-12">
    <h1 class="text-3xl font-serif text-stone-800 mb-4">Edit About Page</h1>
    <p class="text-stone-600">Update the content for your about page.</p>
  </header>
  <%= form_with(model: [:admin, @about_page], local: true, class: "space-y-8") do |form| %>
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-stone-700 mb-2" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 border border-stone-300 rounded-md focus:ring-2 focus:ring-stone-500 focus:border-stone-500 font-serif" %>
    </div>
    <div>
      <%= form.label :content, class: "block text-sm font-medium text-stone-700 mb-2" %>
      <%= form.text_area :content, rows: 12, class: "w-full px-4 py-2 border border-stone-300 rounded-md focus:ring-2 focus:ring-stone-500 focus:border-stone-500 font-serif" %>
    </div>
    <div class="flex items-center space-x-4">
      <%= form.submit "Update About Page", class: "px-6 py-2 bg-stone-800 text-white rounded-md hover:bg-stone-700 transition-colors" %>
      <%= link_to "Cancel", about_path, class: "text-stone-600 hover:text-stone-800 transition-colors" %>
    </div>
  <% end %>
</div>
