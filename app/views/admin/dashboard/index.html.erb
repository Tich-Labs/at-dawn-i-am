<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-serif text-stone-800">Admin Dashboard</h1>
      <%= link_to "Logout", admin_logout_path, method: :delete, class: "text-sm text-stone-600 hover:text-stone-800" %>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-stone-800 rounded-md flex items-center justify-center">
              <span class="text-white font-semibold"><%= @entries_count %></span>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-stone-500 truncate">Total Entries</dt>
              <dd class="text-lg font-medium text-stone-900">Journal Entries</dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-stone-50 px-5 py-3">
        <div class="text-sm">
          <%= link_to "View all entries", admin_entries_path, class: "font-medium text-stone-700 hover:text-stone-900" %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-stone-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <%= link_to "New Entry", new_admin_entry_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-stone-800 hover:bg-stone-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-stone-500" %>
        <%= link_to "Edit About Page", edit_admin_about_page_path, class: "inline-flex items-center px-4 py-2 border border-stone-300 text-sm font-medium rounded-md text-stone-700 bg-white hover:bg-stone-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-stone-500" %>
      </div>
    </div>
  </div>
  <% if @last_entry %>
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-stone-900 mb-4">Latest Entry</h3>
        <div class="text-sm text-stone-600">
          <p><strong>Date:</strong> <%= @last_entry.date.strftime("%B %d, %Y") %></p>
          <p><strong>Preview:</strong> <%= @last_entry.body.truncate(100) %></p>
          <p class="mt-2">
            <%= link_to "View/Edit", edit_admin_entry_path(@last_entry), class: "text-stone-700 hover:text-stone-900" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
