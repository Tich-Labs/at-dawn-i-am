{
  "services": [
    {
      "type": "web",
      "name": "at-dawn-i-am",
      "env": "ruby",
      "plan": "free",
      "buildCommand": "bundle install && rails assets:precompile",
      "startCommand": "bundle exec rails db:migrate && bundle exec puma -C config/puma.rb",
      "envVars": [
        {
          "key": "RAILS_MASTER_KEY",
          "value": "${RAILS_MASTER_KEY}"
        },
        {
          "key": "RAILS_ENV",
          "value": "production"
        },
        {
          "key": "DATABASE_URL",
          "value": "${DATABASE_URL}"
        }
      ]
    }
  ],
  "databases": [
    {
      "type": "postgres",
      "name": "at-dawn-i-am-db",
      "plan": "free"
    }
  ]
}