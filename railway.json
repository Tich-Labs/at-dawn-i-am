services:
  - type: web
    name: at-dawn-i-am
    env: ruby
    plan: free
    buildCommand: bundle install && rails db:migrate && rails assets:precompile
    startCommand: rails server -b 0.0.0.0
    envVars:
      - key: RAILS_MASTER_KEY
        value: YOUR_MASTER_KEY_HERE
      - key: RAILS_ENV
        value: production
      - key: DATABASE_URL
        value: ${DATABASE_URL}


databases:
  - type: postgres
    name: at-dawn-i-am-db
    plan: free